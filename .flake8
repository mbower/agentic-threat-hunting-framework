# .flake8 - Flake8 linting configuration for ATHF

[flake8]
# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .venv,
    venv,
    dist,
    build,
    *.egg-info

# Error codes to ignore
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by max-line-length)
    E501

# Select specific error codes
select = E,W,F,C

# Show source code for each error
show-source = True

# Show pep8 code for each error
show-pep8 = True

# Count errors
count = True

# Print total number of errors
statistics = True
